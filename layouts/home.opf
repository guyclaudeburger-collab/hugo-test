<?xml version="1.0" encoding="utf-8" standalone="no"?>
<package xmlns="http://www.idpf.org/2007/opf" xmlns:dc="http://purl.org/dc/elements/1.1/"
xmlns:dcterms="http://purl.org/dc/terms/" version="3.0" xml:lang="{{ site.Language.Name }}">
<metadata>
<dc:title id="pub-title">{{ site.Title }}</dc:title>
<dc:language id="pub-language">{{ site.Language.Name }}</dc:language>
<dc:date>{{ .Site.Lastmod | time.Format "2012-02-20" }}</dc:date>
<meta property="dcterms:modified">{{ .Site.Lastmod | time.Format "2012-02-20T15:30:00Z" }}</meta>
<meta property="schema:accessMode">textual</meta>
<meta property="schema:accessMode">visual</meta>
<meta property="schema:accessModeSufficient">textual,visual</meta>
<meta property="schema:accessModeSufficient">textual</meta>
<meta property="schema:accessibilityHazard">none</meta>
<meta property="schema:accessibilityFeature">tableOfContents</meta>
<meta property="schema:accessibilityFeature">readingOrder</meta>
<meta property="schema:accessibilityFeature">alternativeText</meta>
</metadata>
<manifest>
<item id="htmltoc" properties="nav" media-type="application/xhtml+xml" href="{{- strings.TrimPrefix "/" (resources.Get "toc.xhtml" | resources.ExecuteAsTemplate "toc.xhtml" $.Page).RelPermalink -}}"/>
{{ with $cover := resources.Get "cover.xhtml" }}
  <item id="cover" href="{{ strings.TrimPrefix "/" (resources.ExecuteAsTemplate "cover.xhtml" $.Page $cover).RelPermalink }}"/>
{{ end }}
<item id="cover-image" properties="cover-image" media-type="image/jpeg" href="images/cover.jpg"/>
{{ range site.RegularPages }}
<item id="{{ .File.UniqueID }}" href="{{ strings.TrimPrefix "/" .RelPermalink }}" media-type="application/xhtml+xml"/>
{{ end }}
{{ range resources.Match "*.css" }}
<item id="{{ .Name | anchorize }}" href="{{ strings.TrimPrefix "/" .RelPermalink }}" media-type="text/css"/>
{{ end }}
{{ range resources.Match "*images*" }}
<item id="{{ .Name | anchorize }}" href="{{ strings.TrimPrefix "/" .RelPermalink }}" media-type="{{ .MediaType }}"/>
{{ end }}
{{ range resources.Match "*.woff*" }}
<item id="font-{{ .Name | anchorize }}" href="{{ strings.TrimPrefix "/" .RelPermalink }}" media-type="{{ .MediaType }}"/>
{{ end }}
</manifest>
<spine>
<itemref idref="cover" linear="no"/>
<itemref idref="htmltoc" linear="yes"/>
{{ range site.RegularPages }}
<itemref idref="{{ .File.UniqueID }}"/>
{{ end }}
</spine>
</package>